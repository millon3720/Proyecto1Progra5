@model IEnumerable<ProyectoProgra5.Models.TiendaProductos>



<div class="container">
    <h1 class="my-4">Catálogo de Productos</h1>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var tiendaProducto in Model)
            {
                <div class="col-md-4 mb-4">
                    <form asp-area="" asp-controller="Compras" asp-action="AgregarAlCarrito" method="post">
                        <div class="card">
                            <div class="img-container">
                                <center>
                                    <img src="@tiendaProducto.Productos.Imagen" alt="@tiendaProducto.Productos.Nombre">
                                </center>
                            </div>
                            <div class="card-body">
                                <input type="hidden" name="IdProductos" value="@tiendaProducto.Productos.Id" />
                                <input type="hidden" name="Precio" value="@tiendaProducto.Precio" />
                                <input type="hidden" name="IdTienda" value="@tiendaProducto.Tiendas.Id" />
                                <h5 class="card-title">@tiendaProducto.Productos.Nombre</h5>
                                <p class="card-text">@tiendaProducto.Productos.Descripcion</p>
                                <p class="card-text">Precio: @tiendaProducto.Precio</p>
                                <div class="form-group">
                                    <label for="cantidad">Cantidad:</label>
                                    <select name="Cantidad" id="Cantidad" class="form-select w-auto">
                                        @for (int i = 1; i <= tiendaProducto.Cantidad; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Agregar Al Carrito</button>
                            </div>
                        </div>
                    </form>
                </div>
            }
        </div>
    }
    else
    {
        <p>No hay productos disponibles en este momento.</p>
    }
</div>





