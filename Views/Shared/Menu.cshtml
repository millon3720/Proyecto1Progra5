@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    string Login = HttpContextAccessor.HttpContext.Session.GetString("Login");
    string Usuario = HttpContextAccessor.HttpContext.Session.GetString("Usuario");
}
<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">FrutaVerdeMarket.com</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                              
                @if (Login == "True")
                {
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Compras" asp-action="MostrarTiendas">Compras</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Tiendas" asp-action="Index">Tiendas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Productos" asp-action="Index">Productos</a>
                    </li>
                }
            </ul>                
            @if (Login == "True")
            {
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Compras" asp-action="CarritoCompras"><img src="~/img/Carritologo.png" /></a>
                    </li>
                </ul>
            }
            @if (Login == "True")
            {
                <ul><li><h5>@Usuario</h5></li></ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">

                        <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Login"><img src="~/img/Salir.png"/></a>
                    </li>
                </ul>
            }
            else
            {
                <ul><li><h5>@Usuario</h5></li></ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">

                        <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Login"><img src="~/img/loginlogo.png" /></a>
                    </li>
                </ul>
            }
        </div>
    </div>
</nav>
